<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net452;netstandard2.0;net5.0</TargetFrameworks>
		<GenerateAssemblyInfo>true</GenerateAssemblyInfo>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="EFrt.Libs.String.*.nupkg" />
	</ItemGroup>

	<PropertyGroup>
		<AssemblyTitle>EFrt - Embeddable FORTH programing language STRING library</AssemblyTitle>
		<Copyright>(C) 2020 - 2021</Copyright>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>EFrt.Libs.String</PackageId>
		<Version>0.5.1</Version>
		<Authors>Premysl Fara</Authors>
		<Title>EFrt.Libs.String - Embeddable FORTH STRING library</Title>
		<Description>
			The STRING library for the EFrt embeddable programming language.
		</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageDescription>EFrt - Embeddable FORTH programing language interpreter - the STRING library.</PackageDescription>
		<PackageTags>efrt;forth;embeddable;interpreter;language</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<!--<None Include="..\README.md" Pack="true" PackagePath="" />-->
		<None Include="..\LICENSE.txt" Pack="true" PackagePath="" />

		<!--<None Include="..\..\efrt-logo.png" Pack="true" PackagePath="" />-->
	</ItemGroup>

